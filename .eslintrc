{
	"extends": "airbnb",
	"rules": {
		"indent": [2, "tab"],
		"no-tabs": 0,
		"linebreak-style": 0,
		"no-mixed-spaces-and-tabs": [2, "smart-tabs"],
		"no-console": 0,
		"prefer-arrow-callback": 0,
		"consistent-return": 0,
		"max-len": ["error", 150],
		"strict": ["off", "global"],
		"no-underscore-dangle": ["off", { "allow": ["._id"] }]
	},
	"parser": "babel-eslint"
}
